<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="game.kalaha.hbm">

    <class name="User" table="USERS">
        <id name="userid" column="I_USERID">
            <generator class="increment"/>
        </id>
        <property name="username" column="S_USERNAME"/>
        <property name="password" column="S_PASSWORD"/>
    </class>

</hibernate-mapping>
